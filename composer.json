{
    "name": "foga/php-http-psr-framework",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Framework\\": "src/Framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\App\\": "tests/App/",
            "Test\\Framework\\": "tests/Framework/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "10.0.x-dev"
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
